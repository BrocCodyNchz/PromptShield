{
  "manifest_version": 3,
  "name": "PromptShield",
  "version": "1.0.0",
  "description": "Protects users from accidentally pasting sensitive data into AI chatbot interfaces.",
  "permissions": ["storage"],
  "browser_specific_settings": {
    "gecko": {
      "id": "promptshield@promptshield.local",
      "strict_min_version": "109.0"
    }
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "PromptShield"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://www.chatgpt.com/*",
        "https://claude.ai/*",
        "https://www.claude.ai/*",
        "https://gemini.google.com/*",
        "https://copilot.microsoft.com/*",
        "https://www.copilot.microsoft.com/*",
        "https://chat.openai.com/*",
        "*://*/*chat*",
        "*://*/*ai*",
        "*://*.ai/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
