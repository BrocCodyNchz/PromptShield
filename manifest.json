{
  "manifest_version": 3,
  "name": "PromptShield",
  "version": "1.0.0",
  "description": "Protects users from accidentally pasting sensitive data into AI chatbot interfaces.",
  "permissions": ["storage"],
  "browser_specific_settings": {
    "gecko": {
      "id": "promptshield@promptshield.local",
      "strict_min_version": "109.0"
    }
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "PromptShield",
    "default_icon": {
      "16": "icons/logo.png",
      "32": "icons/logo.png",
      "48": "icons/logo.png"
    }
  },
  "icons": {
    "16": "icons/logo.png",
    "32": "icons/logo.png",
    "48": "icons/logo.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/banner_logo.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://www.chatgpt.com/*",
        "https://claude.ai/*",
        "https://www.claude.ai/*",
        "https://gemini.google.com/*",
        "https://copilot.microsoft.com/*",
        "https://www.copilot.microsoft.com/*",
        "https://chat.openai.com/*",
        "*://*/*chat*",
        "*://*/*ai*",
        "*://*.ai/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
